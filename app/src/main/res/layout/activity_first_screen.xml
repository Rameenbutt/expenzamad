<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstScreen"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/firstscreen"
      android:layout_marginTop="30dp"
    />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="70dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:layout_margin="2dp"
        app:tint="#FF9800"
      />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:layout_margin="2dp"
      />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:layout_margin="2dp"
      />
  </LinearLayout>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Manage your Daily Expenses"
      android:textSize="20sp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:fontFamily="sans-serif"
      android:textColor="@color/black"
    />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="This app create a budget based on your daily expenses.This help you to stay in control of your money.This app create a budget based on your daily expenses.This help you to stay in control of your money."
      android:textSize="16sp"
      android:layout_margin="2dp"
      android:textStyle="normal"
      android:textAlignment="center"
      android:fontFamily="sans-serif"
      android:textColor="@color/black"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="35dp"
      android:padding="20dp"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:text="Next"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/btnNext"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple"
      />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:text="Skip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/btnSkip"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple"
      />
  </LinearLayout>
  </LinearLayout>